// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Finance {
  id       Int      @id @default(autoincrement())
  value    Int
  createAt DateTime
  type     String
  desc     String?
  rate     Int
  flag     String?
  user     Int?
}

model Message {
  id          Int    @id @default(autoincrement())
  tgMessageId Int
  value       String
}

model Rate {
  id   Int   @id @default(autoincrement())
  rate Float
}

model User {
  id         Int     @id @default(autoincrement())
  telegramId Int     @unique
  name       String?
}
